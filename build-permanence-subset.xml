<project name="PermanenceSubsetExtractor" default="run">

<path id="jars">
  <fileset dir="./lib" includes="**/*.jar"/>
</path>

<target name="clean">
  <delete dir="bin"/>
  <delete dir="exe"/>
</target>

<target name="compile">
  <mkdir dir="bin"/>
  <javac srcdir="src" destdir="bin" classpathref="jars" includeantruntime="false"/>
</target>

<target name="jar" depends="compile">

  <mkdir dir="exe"/>

  <jar destfile="exe/PermanenceSubsetExtractor.jar" basedir="bin">

    <zipgroupfileset dir="lib" includes="*.jar"/>

    <manifest>
      <attribute name="Main-Class" value="main.PermanenceSubsetExtractor"/>
    </manifest>

  </jar>
</target>

<target name="run">
  <java jar="exe/PermanenceSubsetExtractor.jar" fork="true">
    <sysproperty key="inputDirPath" path="${inputDirPath}"/>
    <sysproperty key="graphFileName" value="${graphFileName}"/>
    <sysproperty key="inputMembership" value="${inputMembership}"/>
    <sysproperty key="nbEdit" value="${nbEdit}"/>
    <sysproperty key="subsetMaxSize" value="${subsetMaxSize}"/>
    <sysproperty key="maxNbDistinctDeltaFitnessForPossibleTargetClusters" value="${maxNbDistinctDeltaFitnessForPossibleTargetClusters}"/>
  </java>
</target>

</project>
